{
  "name": "clixen",
  "version": "0.1.0",
  "description": "AI-powered n8n workflow automation platform",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npm run test",
    "test:headed": "cd frontend && npm run test:headed",
    "test:debug": "cd frontend && npm run test:debug",
    "test:ui": "cd frontend && npm run test:ui",
    "test:auth": "cd frontend && npm run test:auth",
    "test:comprehensive": "cd frontend && npm run test:comprehensive",
    "test:performance": "cd frontend && npm run test:performance",
    "test:mobile": "cd frontend && npm run test:mobile",
    "test:desktop": "cd frontend && npm run test:desktop",
    "test:report": "cd frontend && npm run test:report",
    "playwright:install": "cd frontend && npm run playwright:install",
    "backend:test": "cd backend && npm run test",
    "backend:migrate": "cd backend && npm run migrate",
    "backend:deploy-functions": "cd backend && npm run deploy-functions",
    "backend:setup": "cd backend && npm run setup",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}