{
  "name": "clixen",
  "version": "0.1.0",
  "description": "AI-powered n8n workflow automation platform",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "netlify:build": "corepack enable && pnpm install && turbo run build",
    "mcp:start": "cd packages/mcp-server && npm start"
  },
  "devDependencies": {
    "turbo": "^1.10.16",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}